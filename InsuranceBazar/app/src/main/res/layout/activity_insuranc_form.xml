<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitise.InsurancFormActivity">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="fill_parent"
        android:scrollbars="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_marginTop="20dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/insurancelogo" />
            <androidx.cardview.widget.CardView
                android:id="@+id/cardmainsignup"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/profile_image"
                android:layout_height="370dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/profile_image"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:layout_width="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingStart="15dp"
                        android:id="@+id/fullname_id"
                        android:layout_marginLeft="15dp"
                        android:hint="Full Name"

                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:drawablePadding="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/emailpassbg"
                        android:layout_height="50dp">
                    </EditText>
                    <EditText
                        android:layout_width="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingStart="15dp"
                        android:id="@+id/email_id"
                        android:layout_marginLeft="15dp"
                        android:hint="Email Address"
                        android:textSize="14sp"
                        android:inputType="textEmailAddress"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:drawablePadding="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/emailpassbg"
                        android:layout_height="50dp">
                    </EditText>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/emailpassbg">

                        <EditText
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/emailpassbg"
                            android:drawablePadding="5dp"
                            android:hint="Enter Address"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingStart="15dp"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:textSize="14sp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/emailpassbg">

                        <EditText
                            android:id="@+id/phone_id"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/emailpassbg"
                            android:drawablePadding="5dp"
                            android:hint="Enter Phone No"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:paddingStart="15dp"
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:textSize="14sp" />
                    </RelativeLayout><RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/emailpassbg">

                    <EditText
                        android:id="@+id/nic"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/emailpassbg"
                        android:drawablePadding="5dp"
                        android:hint="Enter ID card Number"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:paddingStart="15dp"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textSize="14sp" />
                </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/submitbtn"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/cardmainsignup"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/signinbtnshape"
                android:src="@drawable/google_btn"
                android:text="Submit Form"
                android:textAllCaps="false"
                android:textColor="@color/white"></Button>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>